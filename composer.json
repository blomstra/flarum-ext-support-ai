{
    "name": "flarum-com/ai",
    "description": "The intelligent a(i)gent for your Flarum community.",
    "keywords": [
        "extension",
        "flarum",
        "support",
        "ai",
        "chatgpt",
        "openai"
    ],
    "license": "mit",
    "type": "flarum-extension",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "https://luceos.com"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "flarum/core": "^1.0.0",
        "openai-php/client": "^0.7.3"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Ai\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Flarum\\Ai\\Tests\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Flarum AI",
            "category": "feature",
            "icon": {
                "image": "resources/assets/logo.png",
                "backgroundColor": "#E3E7F1",
                "backgroundSize": "60%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "extiverse": {
            "discuss": "https://discuss.flarum.org/d/?"
        }
    }
